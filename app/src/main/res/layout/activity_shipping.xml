<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ShippingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>

                <com.impakter.impakter.widget.textview.TextViewHeeboRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_border_circle"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_gray2"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_gray2"></View>

                <com.impakter.impakter.widget.textview.TextViewHeeboRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_border_circle"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/color_gray3"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_gray2"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_gray2"></View>

                <com.impakter.impakter.widget.textview.TextViewHeeboRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_border_circle"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_gray3"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.impakter.impakter.widget.textview.TextViewHeeboRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/shipping"
                android:textAllCaps="true"
                android:textColor="@color/text_color_primary" />

            <com.impakter.impakter.widget.textview.TextViewHeeboRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/payment"
                android:textAllCaps="true"
                android:textColor="@color/color_gray3" />

            <com.impakter.impakter.widget.textview.TextViewHeeboRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm"
                android:textAllCaps="true"
                android:textColor="@color/color_gray3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <com.impakter.impakter.widget.MyEditText
                android:id="@+id/edt_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button_gray_border"
                android:hint="@string/first_name"
                android:paddingBottom="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_10" />

            <com.impakter.impakter.widget.MyEditText
                android:id="@+id/edt_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_button_gray_border"
                android:hint="@string/last_name"
                android:textSize="@dimen/sp_16"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/bg_button_gray_border"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:src="@drawable/ic_location" />

                <com.impakter.impakter.widget.MyEditText
                    android:id="@+id/edt_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/address"
                    android:paddingBottom="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_10" />
            </LinearLayout>


            <com.impakter.impakter.widget.MyEditText
                android:id="@+id/edt_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_button_gray_border"
                android:hint="@string/sate"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <com.impakter.impakter.widget.MyEditText
                android:id="@+id/edt_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button_gray_border"
                android:hint="@string/city"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:textSize="@dimen/sp_16"
                android:paddingTop="@dimen/dp_10">

            </com.impakter.impakter.widget.MyEditText>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@drawable/bg_button_gray_border"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_country"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button_gray_border">

                <com.impakter.impakter.widget.MyEditText
                    android:id="@+id/edt_zip_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/zip_code"
                    android:textSize="@dimen/sp_16"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_10" />

                <com.impakter.impakter.widget.textview.TextViewHeeboRegular
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_6"
                    android:text="@string/next"
                    android:textColor="@color/text_color_blue" />
            </LinearLayout>

            <com.impakter.impakter.widget.MyEditText
                android:id="@+id/edt_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1.8"
                android:background="@drawable/bg_button_gray_border"
                android:hint="@string/phone_number"
                android:paddingBottom="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_10" />
        </LinearLayout>

        <com.impakter.impakter.widget.textview.TextViewHeeboRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/add_address"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/sp_16"
            android:visibility="invisible" />
    </LinearLayout>


    <com.impakter.impakter.widget.MyButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/bg_blue_button"
        android:text="@string/lbl_continue"
        android:textAllCaps="true"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>