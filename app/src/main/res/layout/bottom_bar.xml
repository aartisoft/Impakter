<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_selected" />

        <ImageView
            android:id="@+id/tab_favourite"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_favourite_inactive" />

        <ImageView
            android:id="@+id/tab_account"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_account_inactive" />

        <ImageView
            android:id="@+id/tab_cart"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_shopping_inactive" />

        <ImageView
            android:id="@+id/tab_menu"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_inactive" />
    </LinearLayout>
</LinearLayout>